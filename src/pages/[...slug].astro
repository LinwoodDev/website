---
import { CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../layouts/BlogPost.astro';
import { getEntryProject, getEntryUrl, getProject } from '../blog';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: getEntryUrl(post) },
		props: post,
	}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();
const projectName = getEntryProject(post);
const projectTitle = getProject(projectName)?.title;
---

<BlogPost {...post.data} project={projectTitle ? {
	title: projectTitle,
	name: projectName,
} : undefined}>
	<Content />
</BlogPost>
